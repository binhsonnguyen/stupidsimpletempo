{
  "name": "stupidsimpletempo",
  "version": "1.1.1",
  "scripts": {
    "generate-version": "node generate-version.js",
    "dev": "npm run generate-version && npm run parcel:dev",
    "test": "jest",
    "patch": "npm version patch && npm run generate-version",
    "build": "npm run parcel:build",
    "deploy": "npm run build && npm run firebase:deploy",
    "parcel:dev": "parcel src/index.html --dist-dir dev_dist",
    "parcel:build": "parcel build src/index.html --dist-dir public",
    "firebase:deploy": "firebase deploy --only hosting"
  },
  "author": "Nguyen Binh Son",
  "license": "ISC",
  "description": "Stupid Simple Tempo",
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@parcel/packager-raw-url": "^2.15.2",
    "@parcel/transformer-webmanifest": "^2.15.2",
    "babel-jest": "^30.0.0-beta.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "live-server": "^1.2.2",
    "parcel": "^2.15.2",
    "process": "^0.11.10"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "jsdom"
  }
}
